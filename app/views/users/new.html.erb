<h1>Napravi nalog</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for @user do |f| %>
      <%= render 'shared/error_messages', record: @user %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Lozinka" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Potvrdi lozinku" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <%= f.submit "Napravi nalog", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
