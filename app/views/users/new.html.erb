<h1>Napravi nalog</h1>

<%= form_for @user do |f| %>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password, "Lozinka" %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Potvrdi lozinku" %>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.submit "Napravi nalog" %>
  </p>
<% end %>
