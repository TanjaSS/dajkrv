<h1>Napravi nalog</h1>

<div class="row">
  <div class="col-md-6">
    <%= form_for @user do |f| %>
      <%= render 'shared/error_messages', record: @user %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :period, "Na koliko meseci želiš da daješ krv?" %>
        <%= f.select :period, [[3, 3], [4, 4], [6, 6], [9, 9], [12, 12]], class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "Lozinka" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Potvrdi lozinku" %>
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
      <%= f.submit "Napravi nalog", class: "btn btn-primary" %>
      <span>Već imaš nalog? <%= link_to "Prijavi se", new_login_path %></span>
    <% end %>
  </div>
</div>
